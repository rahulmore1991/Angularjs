<body>

    <div id="form-wrapper" class="loginSection">
        <form name="form"  onsubmit="return login()">
            <h2 class="txtCenter">Login</h2>
            <div class="loginRow">
                <div class="loginLabel">
                    <label>User Name</label> 
                </div>
                <div class="inputData">
                    <input type="text" id="username" placeholder="username" />
                </div> 
                <div class="clear"></div>
            </div>
            
            <div class="loginRow">
                <div class="loginLabel">
                   <label>Password</label>
                </div>
                <div class="inputData">
                   <input type="password" id="password" placeholder="password" />
                </div>
                <div class="clear"></div>
            </div>
            
            <div align="center">
                <button id="submitbutton" type="submit">Submit</button>
            </div>
       </form> 
    </div>

    <script>
        
    function login(){
        var uname = document.form.username.value;
        var password = document.form.password.value;
        var userData = JSON.parse(localStorage.getItem('userinfo'));
        if( password == userData.password && uname == userData.username){
            //window.path('file:///home/rahul/MMM/Login/welcome.html');
            window.location.href = 'welcome.html';
            return false;
            //window.location.assign('file:///home/rahul/MMM/Login/welcome.html');
        }else{
            alert("Please enter valid username and password"); 
        }
    }
    </script>

